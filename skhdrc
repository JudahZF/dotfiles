# -- Changing Window Focus --

# change window focus within space
rctrl + ralt + rcmd - j : yabai -m window --focus south
rctrl + ralt + rcmd - k : yabai -m window --focus north
rctrl + ralt + rcmd - h : yabai -m window --focus west
rctrl + ralt + rcmd - l : yabai -m window --focus east

#change focus between external displays (left and right)
rctrl + ralt + rcmd - s: yabai -m display --focus west
rctrl + ralt + rcmd - e: yabai -m display --focus east

# -- Modifying the Layout --

# rotate layout clockwise
rctrl + ralt + rcmd - r : yabai -m space --rotate 270

# toggle window float
rctrl + ralt + rcmd - v : yabai -m window --toggle float --grid 4:4:1:1:2:2

# -- Modifying Window Size --

# maximize a window
rctrl + ralt + rcmd - m : yabai -m window --toggle zoom-fullscreen

# balance out tree of windows (resize to occupy same area)
rctrl + ralt + rcmd - g : yabai -m space --balance

# -- Moving Windows Around --

# swap windows
shift + rctrl + ralt + rcmd - j : yabai -m window --swap south
shift + rctrl + ralt + rcmd - k : yabai -m window --swap north
shift + rctrl + ralt + rcmd - h : yabai -m window --swap west
shift + rctrl + ralt + rcmd - l : yabai -m window --swap east

# move window to display left and right
shift + rctrl + ralt + rcmd - s : yabai -m window --display west; yabai -m display --focus west;
shift + rctrl + ralt + rcmd - g : yabai -m window --display east; yabai -m display --focus east;

# move window to prev and next space
shift + rctrl + ralt + rcmd - p : yabai -m window --space prev;
shift + rctrl + ralt + rcmd - n : yabai -m window --space next;

# move window to space #
shift + rctrl + ralt + rcmd - 1 : yabai -m window --space 1;
shift + rctrl + ralt + rcmd - 2 : yabai -m window --space 2;
shift + rctrl + ralt + rcmd - 3 : yabai -m window --space 3;
shift + rctrl + ralt + rcmd - 4 : yabai -m window --space 4;
shift + rctrl + ralt + rcmd - 5 : yabai -m window --space 5;
shift + rctrl + ralt + rcmd - 6 : yabai -m window --space 6;
shift + rctrl + ralt + rcmd - 7 : yabai -m window --space 7;
shift + rctrl + ralt + rcmd - 8 : yabai -m window --space 8;

# move to space #
rctrl + ralt + rcmd - 1 : yabai -m space --focus 1;
rctrl + ralt + rcmd - 2 : yabai -m space --focus 2;
rctrl + ralt + rcmd - 3 : yabai -m space --focus 3;
rctrl + ralt + rcmd - 4 : yabai -m space --focus 4;
rctrl + ralt + rcmd - 5 : yabai -m space --focus 5;
rctrl + ralt + rcmd - 6 : yabai -m space --focus 6;
rctrl + ralt + rcmd - 7 : yabai -m space --focus 7;
rctrl + ralt + rcmd - 8 : yabai -m space --focus 8;
