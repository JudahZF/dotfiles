# -- Changing Window Focus --

# change window focus within space
ctrl + alt + cmd - j : yabai -m window --focus south
ctrl + alt + cmd - k : yabai -m window --focus north
ctrl + alt + cmd - h : yabai -m window --focus west
ctrl + alt + cmd - l : yabai -m window --focus east

#change focus between external displays (left and right)
ctrl + alt + cmd - s: yabai -m display --focus west
ctrl + alt + cmd - e: yabai -m display --focus east

# -- Modifying the Layout --

# rotate layout clockwise
ctrl + alt + cmd - r : yabai -m space --rotate 270

# toggle window float
ctrl + alt + cmd - v : yabai -m window --toggle float --grid 4:4:1:1:2:2

# -- Modifying Window Size --

# maximize a window
ctrl + alt + cmd - m : yabai -m window --toggle zoom-fullscreen

# balance out tree of windows (resize to occupy same area)
ctrl + alt + cmd - g : yabai -m space --balance

# -- Moving Windows Around --

# swap windows
shift + ctrl + alt + cmd - j : yabai -m window --swap south
shift + ctrl + alt + cmd - k : yabai -m window --swap north
shift + ctrl + alt + cmd - h : yabai -m window --swap west
shift + ctrl + alt + cmd - l : yabai -m window --swap east

# move window to display left and right
shift + ctrl + alt + cmd - s : yabai -m window --display west; yabai -m display --focus west;
shift + ctrl + alt + cmd - g : yabai -m window --display east; yabai -m display --focus east;

# move window to prev and next space
shift + ctrl + alt + cmd - p : yabai -m window --space prev --focus;
shift + ctrl + alt + cmd - n : yabai -m window --space next --focus;

# move window to space #
shift + ctrl + alt + cmd - 1 : yabai -m window --space 1 --focus;
shift + ctrl + alt + cmd - 2 : yabai -m window --space 2 --focus;
shift + ctrl + alt + cmd - 3 : yabai -m window --space 3 --focus;
shift + ctrl + alt + cmd - 4 : yabai -m window --space 4 --focus;
shift + ctrl + alt + cmd - 5 : yabai -m window --space 5 --focus;
shift + ctrl + alt + cmd - 6 : yabai -m window --space 6 --focus;
shift + ctrl + alt + cmd - 7 : yabai -m window --space 7 --focus;
shift + ctrl + alt + cmd - 8 : yabai -m window --space 8 --focus;

# move to space #
ctrl + alt + cmd - 1 : yabai -m space --focus 1;
ctrl + alt + cmd - 2 : yabai -m space --focus 2;
ctrl + alt + cmd - 3 : yabai -m space --focus 3;
ctrl + alt + cmd - 4 : yabai -m space --focus 4;
ctrl + alt + cmd - 5 : yabai -m space --focus 5;
ctrl + alt + cmd - 6 : yabai -m space --focus 6;
ctrl + alt + cmd - 7 : yabai -m space --focus 7;
ctrl + alt + cmd - 8 : yabai -m space --focus 8;
